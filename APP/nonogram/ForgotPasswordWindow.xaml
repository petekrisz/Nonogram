<Window x:Class="nonogram.MVVM.View.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nonogram"
        mc:Ignorable="d"
        Title="ForgotPasswordWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Elfelejtett jelszó" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="E-mail cím:" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailTextBox" FontSize="16" Margin="0,5,0,0"/>
            <Button x:Name="RequestNewPasswordButton" Content="Új jelszó kérése" FontSize="16" Margin="20,20,0,0" Click="RequestNewPassword_Click"/>
            <TextBox x:Name="VerificationCodeTextBox" FontSize="16" Margin="0,5,0,0" Visibility="Collapsed"/>
            <TextBlock Text="Írja be a kapott kódot" FontSize="12" Foreground="Gray" Margin="0,5,0,0" Visibility="Collapsed" x:Name="VerificationCodePlaceholder"/>
            <Button x:Name="VerifyCodeButton" Content="Kód ellenőrzése" FontSize="16" Margin="20,20,0,0" Click="VerifyCodeButton_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
