<Window x:Class="nonogram.MVVM.View.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nonogram"
        mc:Ignorable="d"
        Title="ResetPasswordWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Új jelszó beállítása" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Új jelszó:" FontSize="16" Margin="0,10,0,0"/>
            <PasswordBox x:Name="NewPasswordBox" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="Új jelszó megerősítése:" FontSize="16" Margin="0,10,0,0"/>
            <PasswordBox x:Name="ConfirmPasswordBox" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="A jelszónak legalább 8 karakter hosszúnak kell lennie, tartalmaznia kell legalább 1 nagybetűt és 1 számot." FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
            <Button Content="Jelszó megváltoztatása" FontSize="16" Margin="20,20,0,0" Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
