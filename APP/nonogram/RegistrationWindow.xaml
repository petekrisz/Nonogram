<Window x:Class="nonogram.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nonogram"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="First Name:" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="FirstNameTextBox" FontSize="16" Margin="0,5,0,0"/>

            <TextBlock Text="Last Name:" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="LastNameTextBox" FontSize="16" Margin="0,5,0,0"/>

            <TextBlock Text="E-mail:" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailTextBox" FontSize="16" Margin="0,5,0,0"/>

            <TextBlock Text="Password:" FontSize="16" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" FontSize="16" Margin="0,5,0,0"/>

            <Button Content="Register" FontSize="16" Margin="20,10,0,0" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
