<Window x:Class="nonogram.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nonogram"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="E-mail cím:" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailTextBox" FontSize="16" Margin="0,5,0,0" KeyDown="TextBox_KeyDown"/>

            <TextBlock Text="Jelszó:" FontSize="16" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" FontSize="16" Margin="0,5,0,0" KeyDown="PasswordBox_KeyDown"/>

            <Button Content="Bejelentkezés" FontSize="16" Margin="0,20,0,0" Click="LoginButton_Click"/>
            <Button Content="Elfelejtett jelszó" FontSize="16" Margin="0,10,0,0" Click="ForgotPasswordButton_Click"/>
            <Button Content="Regisztráció" FontSize="16" Margin="0,10,0,0" Click="OpenRegistrationWindow_Click"/>
        </StackPanel>
    </Grid>
</Window>
