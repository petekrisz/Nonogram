<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <DataTemplate x:Key="ItemTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding ImageSource}" Width="50" Height="50" Grid.Column="0" />
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Height="80">
                <TextBlock Text="{Binding ImageTitle}" Foreground="#998000" FontSize="28" FontWeight="Bold" FontFamily="/Fonts/#Kabala" TextAlignment="Center"/>
                <TextBlock Text="{Binding ImageDetails}" Foreground="#FFF7CC" FontSize="16" FontFamily="/Fonts/#Kabala" TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>